{{#each posts as |post|}}
<div  data-aos="fade-down-right" class="card mb-3">
    <div class="card-header bg-success text-white">
        {{post.title}}
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer text-success d-flex flex-row justify-content-between">
        <p>Posted by <a href="">{{user.username}}</a> on {{created_at}}</p>
        <div class="change-post-buttons">
            {{!-- {{#if postAuthor}} --}}
            <button type="clickable" class="btn btn-sm btn-primary" data-id="{{post.id}}">Edit</button>
            <button type="clickable" class="btn btn-sm btn-danger delete-post" data-id="{{post.id}}" id="delete-button">Delete</button>
            {{!-- {{/if}} --}}
        </div>
    </div>
</div>
{{/each}}

<script src="/js/create-post.js"></script>